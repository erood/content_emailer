    br
  script.
    function signup() {
    document.getElementById("signup-form").submit();
    }
    window.onload = function start(){
    //allow submitting with enter key - Signup Form
    $('#signup-form').keydown(function(e) {
    var key = e.which;
    if (key == 13) {
    // As ASCII code for ENTER key is "13"
    document.getElementById("signup-form").submit();
    }
    });
    }
